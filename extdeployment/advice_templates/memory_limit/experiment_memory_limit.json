{
  "name": "${target.k8s.deployment}: Memory Overload",
  "lanes": [
    {
      "steps": [
        {
          "type": "action",
          "ignoreFailure": false,
					"parameters": {
						"duration": "30s",
						"percentage": 200,
						"failOnOomKill": false
					},
          "actionType": "com.steadybit.extension_container.stress_mem",
          "radius": {
            "targetType": "com.steadybit.extension_container.container",
            "predicate": {
              "operator": "AND",
              "predicates": [
                {
                  "key": "k8s.cluster-name",
                  "operator": "EQUALS",
                  "values": [
                    "{{k8s.cluster-name}}"
                  ]
                },
                {
                  "key": "k8s.namespace",
                  "operator": "EQUALS",
                  "values": [
                    "{{k8s.namespace}}"
                  ]
                },
                {
                  "key": "k8s.deployment",
                  "operator": "EQUALS",
                  "values": [
                    "{{k8s.deployment}}"
                  ]
                }
              ]
            },
            "query": null,
            "percentage": 50
          }
        }
      ]
    }
  ]
}
